{
	"schemaVersion": 1,
	"id": "syshud",
	"version": "${version}",
	"name": "SystemHUD",
	"description": "Show system date and time, java version, OS and Minecraft Client Version",
	"authors": [
		"SoultwistRune"
	],
	"contact": {
		"homepage": "",
		"sources": "https://github.com/frozenfleris/systemhud"
	},
	"license": "MIT",
	"icon": "assets/syshud/icon.png",
	"environment": "client",
	"entrypoints": {
		"client": [
			{
				"value": "gov.soultwist.syshud.SyshudMain",
				"adapter": "kotlin"
			}
		],
		"modmenu": [
			{
				"value": "gov.soultwist.syshud.api.MenuEvent",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
	],
	"recommends": {
		"java": ">=20"
	},
	"depends": {
		"fabricloader": ">=0.14.21",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*",
		"modmenu": ">=7.1.0",
		"cloth-config": ">=11.0.99",
		"fabric-language-kotlin": ">=1.8.22"
	},
	"suggests": {
		"another-mod": "*"
	}
}